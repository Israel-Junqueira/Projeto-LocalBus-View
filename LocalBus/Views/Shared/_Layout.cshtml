
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LocalBus</title>

      <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LocalBus.styles.css" asp-append-version="true" />
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-0">
            <div class="container-fluid">


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">


                    <ul class="navbar-nav flex-grow-1" style="margin-top:-5px">

                        <li class="navbar-brand">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="https://www.iconbunny.com/icons/media/catalog/product/1/4/140.9-school-bus-icon-iconbunny.jpg" alt="" width"30" height="24" />
                                <strong>LocalBus</strong>
                            </a>
                        </li>

                        <li class="nav-item" style="margin-top:9px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Team</a>
                        <li class="nav-item">


                        </li>

                        <li class="nav-item" style="margin-top:9px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Aluno" asp-action="Index"> Aluno</a>
                        </li>



                        <li class="navbar-collapse flex-sm-row-reverse nav-link text-dark">
                            @await Html.PartialAsync("_LoginPartial")
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <!--  &copy; 2022 - LocalBus - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>-->
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
