@model ForgotPasswordModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/forgt.css ">
</head>

<body>
    <div class="meucontainer">
        <div class="center">
            <h1 class="text-center">Insira seu E-mail</h1>
            <form asp-action="ForgotPassword" method="post" class="form-horizontal">
                <input asp-for="Email" class="form-control" placeholder="Exemple@gmail.com" />
                <div class="meubotao">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <div asp-validation-summary="All"></div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>