
@model ResetPasswordModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/alteracao.css">
</head>

<body>
    <div class="meucontainer">
        <div class="center">
            <h1 class="text-center">Alterar senha</h1>
            <form asp-action="ResetPassword" method="post" class="form-horizontal">
                <input asp-for="Token" type="hidden" />
                <input asp-for="Email" type="hidden" />
                <div class="espacamento">
                    <label asp-for="Password" class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control" placeholder="Senha" />
                    </div>
                </div>

                <div class="espacamento">
                    <label asp-for="ConfirmPassword" class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar Senha" />
                    </div>
                </div>

                <div class="meubotao">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <div asp-validation-summary="All"></div>
                </div>
        </form>
    </div>
    </div>
</body>

</html>